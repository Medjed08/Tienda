@model IEnumerable<Asgard_Store.Models.Pedido>

@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/admin.css">
    <style>
        .productos-detalle {
            font-size: 0.9rem;
            color: #4a5568;
            margin-top: 5px;
        }

        .color-badge {
            display: inline-block;
            background: #e6f3ff;
            color: #0066cc;
            padding: 2px 8px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-right: 5px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

            .pagination a,
            .pagination span {
                padding: 10px 15px;
                border-radius: 8px;
                text-decoration: none;
                color: #2d3748;
                background: white;
                border: 2px solid #e2e8f0;
                transition: all 0.3s;
            }

                .pagination a:hover {
                    background: #667eea;
                    color: white;
                    border-color: #667eea;
                }

            .pagination .active {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                border-color: #667eea;
                font-weight: bold;
            }

            .pagination .disabled {
                opacity: 0.5;
                cursor: not-allowed;
                pointer-events: none;
            }

        .pagination-info {
            text-align: center;
            color: #718096;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1><a href="@Url.Action("Index", "Home")" style="color: white; text-decoration: none;">🧦 Asgard Store</a></h1>
            <nav>
                <a href="@Url.Action("Index", "Home")">Tienda</a>
                <a href="@Url.Action("Index", "Admin")">Administración</a>
                <span style="color: white; margin: 0 10px;">@User.Identity.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                    <button type="submit" style="background: transparent; border: 1px solid white; color: white; padding: 8px 15px; border-radius: 20px; cursor: pointer;">
                        Cerrar Sesión
                    </button>
                </form>
            </nav>
        </div>
    </header>

    <div class="admin-container">
        <aside class="admin-sidebar">
            <h2>📊Administración</h2>
            <ul>
                <li><a href="@Url.Action("Index", "Admin")">Inicio</a></li>
                <li><a href="@Url.Action("Productos", "Admin")">Productos</a></li>
                <li><a href="@Url.Action("Categorias", "Admin")">Categorías</a></li>
                <li><a href="@Url.Action("Pedidos", "Admin")" class="active">Pedidos</a></li>
                <li><a href="@Url.Action("Usuarios", "Admin")">Usuarios</a></li>
            </ul>
        </aside>

        <main class="admin-content">
            <h1>Gestión de Pedidos</h1>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-error">@TempData["Error"]</div>
            }

            <div class="admin-table">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Total</th>
                            <th>Estado</th>
                            <th>Productos</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pedido in Model)
                        {
                            <tr>
                                <td><strong>#@pedido.PedidoID</strong></td>
                                <td>
                                    @if (pedido.Cliente != null)
                                    {
                                        <strong>@pedido.Cliente.Nombre @pedido.Cliente.Apellido</strong>
                                        <br />
                                        <small style="color: #718096;">@pedido.Cliente.Email</small>
                                    }
                                    else
                                    {
                                        <span>Cliente no disponible</span>
                                    }
                                </td>
                                <td>@pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><strong style="color: #667eea;">$@pedido.Total.ToString("N2")</strong></td>
                                <td>
                                    @{
                                        var estadoColor = pedido.Estado switch
                                        {
                                            "Completado" => "background: #c6f6d5; color: #22543d;",
                                            "En Proceso" => "background: #bee3f8; color: #2c5282;",
                                            "Pendiente" => "background: #feebc8; color: #7c2d12;",
                                            "Cancelado" => "background: #fed7d7; color: #742a2a;",
                                            _ => "background: #e2e8f0; color: #2d3748;"
                                        };
                                    }
                                    <span style="@estadoColor padding: 5px 10px; border-radius: 5px; font-size: 0.9rem;">
                                        @pedido.Estado
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <strong>@(pedido.DetallePedidos?.Count ?? 0) items</strong>
                                        @if (pedido.DetallePedidos != null && pedido.DetallePedidos.Any())
                                        {
                                            <div class="productos-detalle">
                                                @foreach (var detalle in pedido.DetallePedidos.Take(2))
                                                {
                                                    <div style="margin-top: 3px;">
                                                        • @(detalle.Producto?.Nombre ?? detalle.NombreProducto ?? "Producto")
                                                        @if (!string.IsNullOrEmpty(detalle.Color))
                                                        {
                                                            <span class="color-badge">@detalle.Color</span>
                                                        }
                                                    </div>
                                                }
                                                @if (pedido.DetallePedidos.Count > 2)
                                                {
                                                    <div style="margin-top: 3px; color: #a0aec0;">
                                                        ... y @(pedido.DetallePedidos.Count - 2) más
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a href="@Url.Action("DetallePedido", "Admin", new { id = pedido.PedidoID })" class="btn-edit">Ver Detalle</a>

                                    @if (pedido.Estado == "Pendiente")
                                    {
                                        <form asp-action="ActualizarEstadoPedido" asp-route-id="@pedido.PedidoID" method="post" style="display: inline;">
                                            <input type="hidden" name="estado" value="En Proceso" />
                                            <button type="submit" class="btn-edit" style="background: #3182ce;">Procesar</button>
                                        </form>
                                    }

                                    @if (pedido.Estado == "En Proceso")
                                    {
                                        <form asp-action="ActualizarEstadoPedido" asp-route-id="@pedido.PedidoID" method="post" style="display: inline;">
                                            <input type="hidden" name="estado" value="Completado" />
                                            <button type="submit" class="btn-edit" style="background: #38a169;">Completar</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }

                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 40px; color: #718096;">
                                    No hay pedidos registrados
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            @if (ViewBag.TotalPaginas > 1)
            {
                <div class="pagination">
                    @if (ViewBag.PaginaActual > 1)
                    {
                        <a href="@Url.Action("Pedidos", new { pagina = 1 })">« Primera</a>
                        <a href="@Url.Action("Pedidos", new { pagina = ViewBag.PaginaActual - 1 })">‹ Anterior</a>
                    }
                    else
                    {
                        <span class="disabled">« Primera</span>
                        <span class="disabled">‹ Anterior</span>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                    {
                        if (i == ViewBag.PaginaActual)
                        {
                            <span class="active">@i</span>
                        }
                        else if (Math.Abs(i - ViewBag.PaginaActual) <= 2 || i == 1 || i == ViewBag.TotalPaginas)
                        {
                            <a href="@Url.Action("Pedidos", new { pagina = i })">@i</a>
                        }
                        else if (Math.Abs(i - ViewBag.PaginaActual) == 3)
                        {
                            <span>...</span>
                        }
                    }

                    @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
                    {
                        <a href="@Url.Action("Pedidos", new { pagina = ViewBag.PaginaActual + 1 })">Siguiente ›</a>
                        <a href="@Url.Action("Pedidos", new { pagina = ViewBag.TotalPaginas })">Última »</a>
                    }
                    else
                    {
                        <span class="disabled">Siguiente ›</span>
                        <span class="disabled">Última »</span>
                    }
                </div>

                <div class="pagination-info">
                    Mostrando pedidos @((ViewBag.PaginaActual - 1) * 10 + 1) - @(Math.Min(ViewBag.PaginaActual * 10, ViewBag.TotalPedidos)) de @ViewBag.TotalPedidos
                </div>
            }
        </main>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2026 Asgard Store. Administración.</p>
        </div>
    </footer>
</body>
</html>
