@model Asgard_Store.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <header>
        <div class="container">
            <h1><a href="@Url.Action("Index", "Home")" style="color: white; text-decoration: none;">🧦 Asgard Store</a></h1>
            <nav>
                <a href="@Url.Action("Index", "Admin")">Administracion</a>
                <a href="@Url.Action("Productos", "Admin")">Volver a Productos</a>
            </nav>
        </div>
    </header>

    <div class="admin-container">
        <aside class="admin-sidebar">
            <h2>📊Administracion</h2>
            <ul>
                <li><a href="@Url.Action("Index", "Admin")">Inicio</a></li>
                <li><a href="@Url.Action("Productos", "Admin")" class="active">Productos</a></li>
                <li><a href="@Url.Action("Categorias", "Admin")">Categorías</a></li>
                <li><a href="@Url.Action("Pedidos", "Admin")">Pedidos</a></li>
                <li><a href="@Url.Action("Usuarios", "Admin")">Usuarios</a></li>
            </ul>
        </aside>

        <main class="admin-content">
            <h1>Editar Producto</h1>

            <div class="admin-form">
                <form asp-action="EditarProducto" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductoID" />
                    <input type="hidden" asp-for="FechaCreacion" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descripcion"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoriaID">Categoría</label>
                        <select asp-for="CategoriaID" class="form-control" required>
                            <option value="">-- Selecciona una categoría --</option>
                            @foreach (var categoria in ViewBag.Categorias as List<Asgard_Store.Models.Categoria>)
                            {
                                <option value="@categoria.CategoriaID">@categoria.Nombre</option>
                            }
                        </select>
                        <span asp-validation-for="CategoriaID" class="text-danger"></span>
                    </div>

                    <!-- SELECTOR DE SUBCATEGORÍA -->
                    <div class="form-group">
                        <label>Subcategoría (Opcional)</label>
                        <select asp-for="SubcategoriaID" class="form-control" id="SubcategoriaID">
                            <option value="">-- Sin subcategoría --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Precio"></label>
                        <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Stock"></label>
                        <input asp-for="Stock" type="number" class="form-control" required />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Imagen del Producto</label>

                        @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                        {
                            <div style="margin-bottom: 15px;">
                                <label style="display: block; margin-bottom: 8px; font-weight: 500; color: #2d3748;">Imagen actual:</label>
                                <img src="@Model.ImagenUrl"
                                     alt="@Model.Nombre"
                                     style="max-width: 200px; max-height: 200px; border-radius: 10px; border: 2px solid #e2e8f0; object-fit: cover; display: block; margin-bottom: 10px;">
                                <small style="color: #718096; display: block;">@Model.ImagenUrl</small>
                            </div>
                        }
                        else
                        {
                            <p style="color: #a0aec0; margin-bottom: 10px;">No hay imagen asignada</p>
                        }

                        <label style="display: block; margin-bottom: 8px; font-weight: 500; color: #2d3748;">Cambiar imagen:</label>
                        <input type="file" name="imagenFile" accept="image/*" class="form-control">
                        <small style="color: #718096; display: block; margin-top: 5px;">
                            Formatos permitidos: JPG, PNG, GIF, WEBP (máx 5MB)
                        </small>

                        <!-- Vista previa de nueva imagen -->
                        <div id="preview-container" style="margin-top: 15px; display: none;">
                            <strong>Nueva imagen:</strong><br />
                            <img id="preview-image" src="" alt="Vista previa" style="max-width: 200px; border-radius: 8px; border: 2px solid #e2e8f0;" />
                        </div>

                        <!-- Opción de emoji -->
                        <div style="margin-top: 15px;">
                            <label>O usa un emoji:</label>
                            <input asp-for="ImagenUrl" class="form-control" placeholder="🧦" style="max-width: 100px;" />
                        </div>
                    </div>

                    <script>
                        function previsualizarImagen(input) {
                            const preview = document.getElementById('preview-image');
                            const container = document.getElementById('preview-container');

                            if (input.files && input.files[0]) {
                                const reader = new FileReader();

                                reader.onload = function(e) {
                                    preview.src = e.target.result;
                                    container.style.display = 'block';
                                };

                                reader.readAsDataURL(input.files[0]);
                            }
                        }
                    </script>

                    <div class="form-group">
                        <label>
                            <input asp-for="Activo" type="checkbox" /> Producto activo
                        </label>
                    </div>

                    <div style="display: flex; gap: 10px; margin-top: 30px;">
                        <button type="submit" class="btn-primary">Guardar Cambios</button>
                        <a href="@Url.Action("Productos", "Admin")" class="btn-primary" style="background: #718096;">Cancelar</a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <footer>
        <div class="container">
            <p>&copy; 2026 Asgard Store. Administración.</p>
        </div>
    </footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        // Función para cargar subcategorías
        async function cargarSubcategorias() {
            const categoriaSelect = document.getElementById('CategoriaID');
            const subcategoriaSelect = document.getElementById('SubcategoriaID');

            if (!categoriaSelect || !subcategoriaSelect) {
                console.error('No se encontraron los selectores');
                return;
            }

            const categoriaId = categoriaSelect.value;
            const subcategoriaActual = @(Model.SubcategoriaID ?? 0);  // Subcategoría actual del producto

            // Limpiar opciones
            subcategoriaSelect.innerHTML = '<option value="">-- Sin subcategoría --</option>';

            if (!categoriaId) {
                return;
            }

            try {
                const response = await fetch(`/Admin/ObtenerSubcategorias?categoriaId=${categoriaId}`);

                if (!response.ok) {
                    throw new Error('Error al cargar subcategorías');
                }

                const subcategorias = await response.json();

                // Agregar opciones
                subcategorias.forEach(sub => {
                    const option = document.createElement('option');
                    option.value = sub.subcategoriaID;
                    option.textContent = sub.nombre;

                    // ✅ Seleccionar la subcategoría actual del producto
                    if (sub.subcategoriaID === subcategoriaActual) {
                        option.selected = true;
                    }

                    subcategoriaSelect.appendChild(option);
                });

                console.log(`Cargadas ${subcategorias.length} subcategorías`);

            } catch (error) {
                console.error('Error al cargar subcategorías:', error);
            }
        }

        // Ejecutar al cargar la página y al cambiar categoría
        document.addEventListener('DOMContentLoaded', function() {
            const categoriaSelect = document.getElementById('CategoriaID');

            if (categoriaSelect) {
                // Cargar subcategorías al inicio
                cargarSubcategorias();

                // Cargar al cambiar categoría
                categoriaSelect.addEventListener('change', cargarSubcategorias);
            }
        });
    </script>
</body>
</html>